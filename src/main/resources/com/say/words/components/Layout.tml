 <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>    
        <link href='http://fonts.googleapis.com/css?family=Bubblegum+Sans' rel='stylesheet' type='text/css'></link>
        <title>${title}</title>
    </head>
    <body>
    	<div class="container">
        <!-- start header -->
        <div class="header">
            <div class="logo">
            <div>                         	
                <span class="label label-default" style="float:left; height:30px; width:70px; font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:25px; ">Say</span> 
                <span class="label label-warning" style="float:left; height:30px; width:100px; font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:25px; ">Words</span>
            </div>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse" style="clear:both;font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:20px; ">
                <ul class="nav navbar-nav">
                    <li t:type="loop" source="pageNames" value="pageName" class="prop:classForPageName">
                        <t:pagelink page="prop:pageName">${pageName}</t:pagelink>
                    </li>
                </ul>
            </div>
        </div>
        <!-- end header -->
        <!-- start page -->
        <div class="page">
            <!-- start content -->
            <div class="content">
                <div class="post">
                    <div class="title" style="font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:25px;" >
                        <h2 style="font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:22px;">${title}</h2>
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        <!-- start footer -->
        <div class="footer" style="font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:18px;">
            <p class="legal" style="font-family: 'Bubblegum Sans', cursive; font-weight: 200; font-size:18px;">
                &copy;2014 say.words All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by
                <a href="#">Smita</a>
                <!-- &nbsp;&nbsp;&bull;&nbsp;&nbsp; -->
                <!-- Icons by
                <a href="#">FAMFAMFAM</a>. -->
            </p>
        </div>
        <!-- end footer -->
        </div>
    </body>
</html>
